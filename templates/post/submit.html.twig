{% extends "base.html.twig" %}

{% block body %}
    <div class="container" style="margin-top: 50px;">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" placeholder="Name" name="name" id="name" value="{{ name }}" required>
                    {% if name_validate %}
                        <div style="color: red">Name at least 10 characters</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" placeholder="Description" name="description"
                              id="description" required>{{ description }}</textarea>
                    {% if description_validate %}
                        <div style="color: red">Description at least 10 characters</div>
                    {% endif %}
                </div>
                <div>
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
{% endblock %}

